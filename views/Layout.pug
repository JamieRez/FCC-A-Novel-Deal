        .collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/') View Books
              li
                if(!username)
                  a(href='/auth/google') Add Book
                if(username)
                  a(href='/add') Add Book

              li
                if(!username)
                  a(href='/auth/google') Log In
                if(username)
                  a(href='/profile')= username + "'s Account"
